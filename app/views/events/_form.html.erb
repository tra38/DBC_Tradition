<%= form_for @event do |f| %>
<% if @event.errors.any?%>
  <ul>
  <% @event.errors.full_messages.each do |message| %>
    <li><%= message%></li>
    <%end%>
  </ul>
<%end%>
<p>
  <%= f.label :title %>
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :description %>
  <%= f.text_area :description %>
</p>
<p>
  <%= f.label :gimmick %>
  <%= f.text_area :gimmick %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
